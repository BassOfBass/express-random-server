doctype html
html(lang="en")
  head
    block meta
      meta(charset="UTF-8")
      meta(http-equiv="X-UA-Compatible", content="ie=edge")
      meta(name="viewport", content="width=device-width, initial-scale=1.0")
      meta(name="author", content="BassOfBass")
      meta(name="description", content="The simple Node.js server made with Express framework.")

    link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")

    block styles
      link(rel='stylesheet', href='/stylesheets/normalize.css')
      //- optional template style in case complete overwrite is needed
      link(rel='stylesheet', href='/stylesheets/template.css')

    block scripts
      script(src="/js/main.js" defer)

    title #{title}

  body
    a.gskip(href="#maincontent") Skip to content
    header.gheader
      block globalheader
        ul.gtop
          li
            a.glogo(href="/") Express Server
          li
            form.gsearch
              div
                label(for="globalsearch") Search:
                input#globalsearch(type="search", name="search")
              div
                button(type="submit") Go!
        nav.gnav
          ul
            li
              a(href="/things") Things
            li
              a(href="/users") Users
            li
              a(href="/assess") Tests
            li
              a(href="users/signup") Sign Up

    main#maincontent
      block content

    block globalasides
      aside.gaside aside

    footer.gfooter 
      block globalfooter
        address
          a(href="https://github.com/BassOfBass") My GitHub
        
        button.glightswitch(type="button") 
          | Dark #[br] Light
